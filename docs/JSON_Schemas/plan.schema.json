{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sabora.app/schemas/plan.schema.json",
  "title": "SaboraPlan",
  "type": "object",
  "required": [
    "id",
    "user_id",
    "starts_on",
    "ends_on",
    "days"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "user_id": {
      "type": "string"
    },
    "starts_on": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "ends_on": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "goal": {
      "type": "string",
      "description": "e.g., balance, low-sodium, budget"
    },
    "days": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "date",
          "meals"
        ],
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "meals": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "meal_type",
                "recipe_id",
                "servings"
              ],
              "properties": {
                "meal_type": {
                  "type": "string",
                  "enum": [
                    "breakfast",
                    "lunch",
                    "dinner",
                    "snack"
                  ]
                },
                "recipe_id": {
                  "type": "string"
                },
                "servings": {
                  "type": "number",
                  "minimum": 0.1
                },
                "notes": {
                  "type": "string"
                },
                "rationale": {
                  "type": "string",
                  "description": "why this recipe (cheaper/faster/no dairy)"
                }
              }
            }
          }
        },
        "additionalProperties": false
      }
    },
    "weekly_nutrition": {
      "type": "object",
      "properties": {
        "energy_kcal": {
          "type": "number"
        },
        "protein_g": {
          "type": "number"
        },
        "carbs_g": {
          "type": "number"
        },
        "fat_g": {
          "type": "number"
        },
        "fiber_g": {
          "type": "number"
        },
        "sodium_mg": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "constraints": {
      "type": "object",
      "properties": {
        "allergies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cuisines": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dailyPrepMinutes": {
          "type": "number"
        },
        "budgetTier": {
          "type": "string",
          "enum": [
            "low",
            "mid",
            "high"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
